<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="net.portes.appthemovie.ui.movies.MoviesListFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movies_list" />

    <fragment
        android:id="@+id/navigation_images"
        android:name="net.portes.appthemovie.ui.images.ImagesFragment"
        android:label="@string/title_images"
        tools:layout="@layout/fragment_images" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="net.portes.appthemovie.ui.location.LocationFragment"
        android:label="@string/title_location"
        tools:layout="@layout/fragment_location" />
</navigation>